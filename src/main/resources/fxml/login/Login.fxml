<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml" stylesheets="@Login.fxml.css" fx:controller="de.tudl.playground.datorum.ui.controller.LoginController" prefWidth="1280.0" prefHeight="720.0">
    <Label text="Login" styleClass="header-label" />

    <VBox alignment="CENTER" spacing="10" styleClass="form-container">
        <!-- Username Field -->
        <Label text="Username:" />
        <TextField fx:id="usernameField" promptText="Enter your username">
            <tooltip>
                <Tooltip text="Please provide your username. This is typically your email or a unique identifier." />
            </tooltip>
        </TextField>

        <!-- Password Field -->
        <Label text="Password:" />
        <PasswordField fx:id="passwordField" promptText="Enter your password">
            <tooltip>
                <Tooltip text="Please provide your password. Make sure it is secure and confidential." />
            </tooltip>
        </PasswordField>

        <!-- Login Button -->
        <Button text="Login" onAction="#handleLogin" />

        <!-- Register Hyperlink -->
        <Hyperlink text="Noch keinen Account? Registrieren" onAction="#goToRegister" />
    </VBox>
</VBox>
